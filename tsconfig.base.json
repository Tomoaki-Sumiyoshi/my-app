{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@portfolio-chat/prisma-schema": ["packages/prisma-schema/src"],
      "zod-schema": ["packages/zod-schema/src"],
      "zod-schema-prisma": ["packages/zod-schema-prisma/src"],
      "zod-schema-error": ["packages/zod-schema-error/src"],
      "zod-schema-response": ["packages/zod-schema-response/src"],
      "zod-schema-request": ["packages/zod-schema-request/src"]
    }
  }
}
