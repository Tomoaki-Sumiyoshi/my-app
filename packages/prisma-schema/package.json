{
  "name": "@portfolio-chat/prisma-schema",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "tsx src/seed.ts"
  },
  "scripts": {
    "generate": "prisma generate",
    "migrate:dev": "prisma migrate dev reset --schema=./prisma/schema.prisma",
    "migrate:deploy": "dotenv -e ./.env.production -- prisma migrate deploy --schema=./prisma/schema.prisma",
    "seed:dev": "prisma db seed",
    "build": "tsc --build"
  },
  "devDependencies": {
    "@types/node": "^20.19.9",
    "dotenv-cli": "^10.0.0",
    "prisma": "^6.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0"
  }
}
