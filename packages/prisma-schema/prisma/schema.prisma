generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Message {
  messageId String   @id @default(uuid()) @map("message_id")
  userId    String   @default(uuid()) @map("user_id")
  content   String
  isAi      Boolean  @default(false) @map("is_ai")
  createdAt DateTime @unique @default(now()) @map("created_at")
}
